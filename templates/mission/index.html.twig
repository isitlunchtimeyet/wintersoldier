{% extends 'base.html.twig' %}

{% block title %}Hello MissionController!{% endblock %}



{% block body %}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css">
  
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .body{
      margin:30px
    }


</style>
<header>
  <div class="p-5 text-center bg-light">
    <h1 class="mb-3">Welcome Winder Soldier!</h1>
    <h4 class="mb-3">Mission Brief Dashboard</h4>
  </div>
</header>

<div class="container mb-2">
<div class="row">
    <div class="col-md-9">

      <div class=table>
        



      </div>
  </div>
  <div class="col-md-3">
  <strong>Date:</strong> {{ "now"|date("m/d/Y/") }} <br/>
  <strong>Time:</strong> {{ "now" |date('H:i', 'Indian/Mauritius') }}
  </div>
</div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4">
        <div class="container">
          <table class="table table-striped table-bordered" >
            <thead>
                <tr>
                  <th colspan="2">Winter Soldier Profile</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                  <td>Name</td>
                  <td>{{wintersoldiername}}</td>
                </tr>
                <tr>
                  <td>Age</td>
                  <td>{{wintersoldierage}}</td>
                </tr>
                <tr>
                  <td>Location</td>
                  <td>{{wintersoldierlocation}}</td>
                </tr>
                <tr>
                  <td># Kills</td>
                  <td>{{wintersoldierkills}}</td>
                </tr>
            </tbody>
          </table>
        </div>
    </div>
    <div class="col-md-8">
    </div>
  </div>
</div>

<div class="container datatable-container" style="width:100%">

        <table id="tableru"  class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th><strong>Target</strong></th>
                <th><strong>Name</strong></th>
                <th><strong>Age</strong></th>
                <th><strong>Location</strong></th>
                <th><strong>Details</strong></th>
                <th><strong>Deadline</strong></th>
                <th><strong>Status</strong></th>
            </tr>
          </thead>
        <tbody>
        {% for t in target %}
            <tr>
              <td><img src={{t.target}} width="75" height="75"></td>
              <td>{{t.name}}</td>
              <td>{{t.age}}</td>
              <td>{{t.location}}</td>
              <td>{{t.detail}}</td>
              <td>{{t.deadline}}</td>
              <td>{% if "now"|date("Y-m-d") > t.deadline|date("Y-m-d") %}
                            Expired
                  {% else %}
                            Alive
                  {% endif %}
              
              </td>
            </tr>

        {% endfor %}
        </tbody>
        </table>

<script>
$(document).ready(function() {
    $('#tableru').DataTable();
    responsive: true
} );
</script>
</div>


{% endblock %}